# Ethic Companion V2 - Environment Configuration
# Copy this file to .env and configure your API keys

# Google Gemini API Key (required)
GOOGLE_API_KEY=your_google_api_key_here

# Tavily Search API Key (required for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# Weaviate API Key (required for memory/vector storage)
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Weaviate Configuration (optional - defaults for local development)
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_HTTPS=false

# Google Cloud Configuration (only needed for Cloud Run deployment)
# GOOGLE_CLOUD_PROJECT=your-project-id

# Development Configuration
# NODE_ENV=development
# PORT=8000
